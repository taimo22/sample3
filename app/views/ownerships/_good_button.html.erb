
  <% if current_user.good?(topic) %>
    <%= form_for(topic.ownerships.find_by(user_id: current_user.id), html: {method: :delete}) do %>
      <%= hidden_field_tag :topic_id, topic.id %>
      <%= submit_tag 'Apathy', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <%else %>
      <%= form_for(topic.ownerships.build) do %>
        <%= hidden_field_tag :topic_id, topic.id %>
        <%= submit_tag 'Empathy', class: 'btn btn-primary btn-sm' %>
      <% end %>
  <% end %>

