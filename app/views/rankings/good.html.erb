<div class="header text-center">
  <h1>人気Topic</h1>
</div>
<div class="row">
  <div class="offset-2 col-8">
      <% @topics.each_with_index do |topic, index| %>
        <div class="ranking">
          <div class="media">

            <img class="mr-3 img-rounded" src="<%= gravatar_url(topic.user, {size: 50}) %>" alt="">
          <div class="media-body">
            <%= link_to topic.user.name, user_path(topic.user) %> <span class="text-muted">posted at <%= topic.created_at %></span>
            <div>
              <p><%= topic.content %></p>
            </div>
            <div>
              <% unless current_user == topic.user %>
                <%= render 'ownerships/good_button', topic: topic %>
              <% end %>
            </div>
          </div>
            <div class="card-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[topic.id] %> Empathy</p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
