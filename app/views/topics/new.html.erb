<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">Topic投稿</div>
      <div class="panel-body">

        <%= form_for(@topic) do |f| %>
          <div class="form-group">
            <%= f.label :name, 'Title' %><br />
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :content, 'Topic' %><br />
            <%= f.text_area :content, class: 'form-control', rows: 10 %>
          </div>

          <div class="actions">
            <%= f.submit "topicを作成", class: 'btn btn-primary' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
