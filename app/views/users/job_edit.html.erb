<div class="row">
  <div class="offset-3 col-6">
    <div class="card">
      <div class="card-header">志望業界または企業・職種の編集</div>
      <div class="card-body">
        <%= form_for(@user) do |f| %>

          <div class="form-group">
            <%= f.text_field :job, class: 'form-control' %>
          </div>


          <div class="text-right">
            <%= f.submit '編集する', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
