<div class="container">
<div class="row">
  <div class="offset-3 col-6">
    <div class="card">
      <div class="card-header">自己紹介の編集</div>
      <div class="card-body">
        <%= form_for(@user) do |f| %>

          <div class="form-group">
            <%= f.label :intro, '自己紹介' %>
            <%= f.text_area :intro, class: 'form-control', rows: 10 %>
          </div>


          <div class="text-right">
            <%= f.submit '編集する', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
